{

  "description": "Creating your first FireFox WebExtension ",
  "manifest_version": 2,
  "name": "hello-firefox-webextension",
  "version": "1.0",
  "homepage_url": "http://www.techiediaries.com/developing-firefox-extensions-with-webextension/",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "applications": {
    "gecko": {
      "id": "hello-firefox-webextension@techiediaries.com",
      "strict_min_version": "45.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon-32.png"
  }

}
